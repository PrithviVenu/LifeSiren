<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Respond">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifesirengif" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gif"
        android:id="@+id/imageView"
        android:src="@mipmap/lifesiren"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/req"
        android:layout_below="@id/imageView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Request Id"
        android:textColorHint="@android:color/widget_edittext_dark"
        android:textColor="@android:color/widget_edittext_dark"
        />
    <EditText
        android:id="@+id/res"
        android:layout_below="@id/req"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Response"
        android:textColorHint="@android:color/widget_edittext_dark"
        android:textColor="@android:color/widget_edittext_dark"
        />
    <EditText
        android:id="@+id/con"
        android:layout_below="@id/res"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ContactNumber"
        android:textColorHint="@android:color/widget_edittext_dark"
        android:textColor="@android:color/widget_edittext_dark"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/con"
        android:text="Respond"
        android:layout_centerHorizontal="true"
        android:onClick="sendResponse"/>
</RelativeLayout>