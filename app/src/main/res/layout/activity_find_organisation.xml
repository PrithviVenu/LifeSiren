<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindOrganisation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lifesirengif" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gif"
            android:id="@+id/imageView"
            android:src="@mipmap/lifesiren"
            android:layout_centerHorizontal="true" />
        <EditText
            android:id="@+id/oid"
            android:layout_below="@id/imageView"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Organisation Id"
            android:textColorHint="@android:color/widget_edittext_dark"
            android:textColor="@android:color/widget_edittext_dark"
            />
        <TextView
            android:id="@+id/oid1"
            android:layout_below="@id/oid"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/widget_edittext_dark"
            />
        <TextView
            android:id="@+id/oName1"
            android:layout_below="@id/oid1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/widget_edittext_dark"
            />
        <TextView
            android:id="@+id/oCity1"
            android:layout_below="@id/oName1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/widget_edittext_dark"
            />
        <TextView
            android:id="@+id/oAddress1"
            android:layout_below="@id/oCity1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/widget_edittext_dark"
            />
        <TextView
            android:id="@+id/oVerification_Status1"
            android:layout_below="@id/oAddress1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/widget_edittext_dark"
            />
        <TextView
            android:id="@+id/oContact_Number1"
            android:layout_below="@id/oVerification_Status1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/widget_edittext_dark"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/oContact_Number1"
            android:text="Find Organisation"
            android:onClick="findOrganisation"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</ScrollView>